<%- include("partials/header") %>

    <div
        style="min-height:80vh;display:flex;align-items:center;justify-content:center;padding:60px 20px;margin-top:var(--nav-height);">
        <div style="text-align:center;max-width:600px;margin:0 auto;">
            <div style="font-size:5rem;color:var(--gold);margin-bottom:24px;">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <h1
                style="font-family:var(--font-display);font-size:6rem;font-weight:800;color:var(--navy);line-height:1;margin-bottom:16px;">
                <%= typeof error !=='undefined' && error.includes('404') ? '404' : 'Oops' %>
            </h1>
            <h2 style="font-family:var(--font-display);font-size:1.75rem;color:var(--text-mid);margin-bottom:12px;">
                <%= typeof error !=='undefined' ? error : 'Something went wrong' %>
            </h2>
            <p style="color:var(--text-light);font-size:1rem;margin-bottom:40px;line-height:1.7;">
                <%= typeof message !=='undefined' ? message : 'An unexpected error occurred. Please try again.' %>
            </p>
            <div style="display:flex;gap:16px;justify-content:center;flex-wrap:wrap;">
                <a href="/" class="btn btn-primary"><i class="fas fa-home"></i> Go Home</a>
                <a href="/products" class="btn btn-secondary"><i class="fas fa-box"></i> Browse Products</a>
            </div>
        </div>
    </div>

    <%- include("partials/footer") %>