<%- include("partials/header") %>

    <section class="about-page">

        <!-- Hero -->
        <div class="about-hero">
            <div class="container">
                <div class="about-hero-content">
                    <span class="hero-badge"><i class="fas fa-info-circle"></i> About Us</span>
                    <h1 class="about-title">Building the Future of<br><span class="gradient-text">E-Commerce in
